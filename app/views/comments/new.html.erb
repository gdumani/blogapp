<%= link_to 'Home', "/" %>

<%= content_tag :h1, 'New Comment for Post:' %>

<%= content_tag :h2, @post.title %>

<%= form_with url: :comment_create do |form|%>
  <%= form.hidden_field :user_id, value: @current_user.id  %>
  <%= form.hidden_field :post_id, value: @post.id%>
  <%= form.label :text, 'Content: '%>
  <%= form.text_area :text %>
  <%= form.submit %>
<% end %>

<% @comment.errors.messages.each do |key,message| %>
  <%= content_tag :h4, "#{key}  #{message}" %>
<% end %>