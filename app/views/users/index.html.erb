<h1>List of users</h1>

<table>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.photo,
        alt: "User Photo", width: "180" %>
      </td>
      <td>
        <%= content_tag :h2, user.name %>
        <%= content_tag :p, "Number of posts: #{user.posts_counter}" %>
      </td>
    </tr>
  <% end %>
</table>